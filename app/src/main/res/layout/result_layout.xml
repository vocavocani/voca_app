<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/toolbar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:layout_above="@+id/ok_btn">

        <LinearLayout
            android:id="@+id/result_table"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"/>

        <RelativeLayout
            android:id="@+id/score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_table">
            <LinearLayout
                android:id="@+id/my_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="60sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="60sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="60sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_score"
                android:layout_alignLeft="@+id/my_score"
                android:layout_alignStart="@+id/my_score"
                android:layout_alignRight="@+id/my_score"
                android:layout_alignEnd="@+id/my_score"
                android:text="(맞은 개수/문제 개수)\n나의점수"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/avg_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/my_score"
                android:layout_toStartOf="@+id/my_score"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="30sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avg_score"
                android:layout_alignLeft="@+id/avg_score"
                android:layout_alignStart="@+id/avg_score"
                android:layout_alignRight="@+id/avg_score"
                android:layout_alignEnd="@+id/avg_score"
                android:text="평균점수"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/my_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/my_score"
                android:layout_toEndOf="@+id/my_score"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등"
                    android:textSize="30sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_rank"
                android:layout_alignLeft="@+id/my_rank"
                android:layout_alignStart="@+id/my_rank"
                android:layout_alignRight="@+id/my_rank"
                android:layout_alignEnd="@+id/my_rank"
                android:text="나의등수"
                android:gravity="center"/>
        </RelativeLayout>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/result_chart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/score_layout"/>

    </RelativeLayout>

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="확인"/>
</RelativeLayout>