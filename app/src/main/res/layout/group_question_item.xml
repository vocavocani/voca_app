<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="1dp"
    android:elevation="2dp"
    android:background="?android:attr/selectableItemBackground">
    <LinearLayout
        android:id="@+id/question_writer_layout"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/writer_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/writer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/group_writer_name"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/question_writer_layout"
        android:layout_toRightOf="@+id/question_writer_layout"
        android:layout_toStartOf="@+id/question_more_btn"
        android:layout_toLeftOf="@+id/question_more_btn"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시물 제목"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="D-14"/>
        </LinearLayout>

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout"
            android:text="2017.07.02 오전 1:22"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/start_time"
            android:layout_toEndOf="@+id/start_time"
            android:layout_alignBottom="@+id/start_time"
            android:text="~"/>
        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_time"
            android:text="2017.07.02 오전 1:22"
            android:textSize="14sp"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/question_more_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_add_black_24dp"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        android:id="@+id/board_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_writer_layout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="60dp"
            android:text="오직 우리 청춘에서만 구할 수 있는 것이다 청춘은 인생의
황금시대다 우리는 이 황금시대의 가치를 충분히 발휘하
기 위하여 이 황금시대를 영원히 붙잡아 어쩌구 저쩌구 djfakasdf"
            android:maxLines="3"
            android:ellipsize="end"/>

        <HorizontalScrollView
            android:id="@+id/question_img_layout"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_below="@+id/content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:divider="@drawable/horizontal_divider"
                android:showDividers="middle">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/test_image"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/test_image"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/group_solve_problem_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/question_img_layout"
            android:layout_marginTop="10dp"
            android:text="문제 풀기"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/question_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/board_content">
        <TextView
            android:id="@+id/reply_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="댓글 "
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/reply_title"
            android:layout_toRightOf="@+id/reply_title"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/reply_count"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="댓글달기"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>