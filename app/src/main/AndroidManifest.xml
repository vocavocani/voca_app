<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vvn.vocavocani">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.ProfileActivity"
            android:parentActivityName=".home.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".home.MainActivity" />
        </activity>
        <activity
            android:name=".group.GroupCreateActivity"
            android:parentActivityName=".home.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".home.MainActivity" />
        </activity>
        <activity
            android:name=".group.GroupRuleActivity"
            android:parentActivityName=".group.GroupCreateActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".group.GroupCreateActivity" />
        </activity>
        <activity
            android:name=".group.GroupActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".group.GroupBoardDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".question.QuestionActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".question.ResultActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".question.WorkBookCreateActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <!--
            android:label="@string/title_activity_scrolling" -->
    </application>

</manifest>